<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/neutral_900"
    android:paddingTop="48dp"
    android:paddingBottom="24dp"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    tools:context=".CostsActivity">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="32dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Custos"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/amber_400" />

    </LinearLayout>

    <!-- Conteúdo central -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@android:drawable/ic_menu_edit"
            android:layout_marginBottom="16dp"
            app:tint="@color/amber_400" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Controle de Custos"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/neutral_50"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Funcionalidade em desenvolvimento"
            android:textSize="16sp"
            android:textColor="@color/neutral_400"
            android:gravity="center" />

    </LinearLayout>

    <!-- Botão de retorno -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/backToDashboardButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Voltar ao Menu Principal"
        android:textSize="16sp"
        android:textStyle="bold"
        app:backgroundTint="@color/amber_400"
        app:cornerRadius="12dp"
        android:textColor="@color/neutral_900"
        app:icon="@android:drawable/ic_menu_revert"
        app:iconTint="@color/neutral_900" />

</LinearLayout>

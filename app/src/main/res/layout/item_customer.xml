<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/card_background"
    android:layout_margin="8dp"
    android:padding="16dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <!-- Nome do cliente -->
    <TextView
        android:id="@+id/customerNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nome do Cliente"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/neutral_50"
        android:layout_marginBottom="4dp" />

    <!-- Email -->
    <TextView
        android:id="@+id/customerEmailTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="email@exemplo.com"
        android:textSize="14sp"
        android:textColor="@color/amber_400"
        android:layout_marginBottom="2dp" />

    <!-- Telefone -->
    <TextView
        android:id="@+id/customerPhoneTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="(11) 99999-9999"
        android:textSize="14sp"
        android:textColor="@color/neutral_300"
        android:layout_marginBottom="2dp" />

    <!-- Endereço -->
    <TextView
        android:id="@+id/customerAddressTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Endereço completo"
        android:textSize="12sp"
        android:textColor="@color/neutral_400"
        android:maxLines="2"
        android:ellipsize="end" />

</LinearLayout>
